{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/interview-bot-api/src/main.py",
      "env": {
        "FLASK_ENV": "development"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/interview-bot-api"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/interview-bot/src"
    }
  ]
}

